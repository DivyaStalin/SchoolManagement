<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attendance </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <style>
      body{
        margin-right: 10%;
        margin-left: 10%;
      }
      a{
        color:blue;
        text-decoration: none;
        
      }
     </style> 
</head>
<body>
  <h4 style="text-align: right;"><a href="http://localhost:4000/home">back</a></h4>
    <div class="container mt-5"> 
      <h1 class="text-center">Student attendence
  </h1>
          
</div>
      <br><br>
    <table class="table table-bordered">
        <thead class="table-dark">
          <tr>
            <th scope ="col">StuID</th>
            <th scope="col">Name</th>
            <th scope="col">Present/Absent</th>
          </tr>
        </thead>
        <tbody>
          <%if(result.length > 0) { %>
            <% result.forEach(function(e)  {%>
              <tr>
                <td><%= e.stuID %></td>
                <td><%= e.Name %></td>
                <td>
                  <button class="btn btn-primary" ><a href="http://localhost:4000/student/pre?stuID=<%=e._id%>">P</a></button>
                  <button class="btn btn-danger" ><a href="http://localhost:4000/student/abs?stuID=<%-e_id%>">A</a></button>
                </td>
              </tr>
            <% }) %>

          <% } %> 

          
        </tbody>  
          
      </table>
    </div> 
    <hr>
    
    
</body>
</html>