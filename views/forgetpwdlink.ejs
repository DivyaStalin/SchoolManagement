<style>
    body{
        margin: 10%;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .btn{
        height:50px;
        width: 90%;
        font-size: 20px;
    }
</style>
<body>
<div class="card text-center" style="width: 300px;">
    <div class="card-header h5 text-white bg-primary">Password Reset</div>
    <div class="card-body px-5">
        <p class="card-text py-2">
            Enter your email address and we'll send you an email  to reset your password.
        </p>
        <form action="/user/resetlink" method="post">
            <input type="email"name="email" placeholder="Enter email " class="form-control"/><br><br>
            <div>
            <button class="btn btn-primary" onclick='document.getElementById("demo").innerHTML="Check your mail to reset your password"'>Submit</button>
            </div>
            <p id="demo"></p>
        </form>
            
    </div>  
</div>
</body>
