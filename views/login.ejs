<script src="https://kit.fontawesome.com/7feae977fb.js" crossorigin="anonymous"></script>
    <style>
        body{
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0px;
            padding: 0px;
            background-color: aqua;
        }
        
        form{
            border: 12px inset red;
            padding: 20px;
            background-color: grey;
            }
        .form-control{
            border:none;
            border-bottom: 3px solid green;
            background-color: whitesmoke;
            border-radius: 10px;
            
        }
        input{
            font-size: 20px;
        }
        .fas{
        color:green;
        font-size: 50px;
        padding: 20px;
        background-color:whitesmoke;
        border: solid;
        border-radius: 40%;
    }
        .fa-regular{
            color:white;
            background-color: black;
            border-radius: 50%;
            padding: 3px;
        }
        #submit{
            border:2px solid green;
            border-radius: 20px;
            width :90px;
            height: 50px;
            background-color: aquamarine;
            font-weight: bold;
            font-family: 'Times New Roman', Times, serif;
            
        }
    </style>
</head>
<body>
<div class="container-fluid col-10 mt-5">
    <nav class="navbar navbar-expand-lg fixed-top bg-info " id="navbar">
        <h2 style="font-weight: bold;text-shadow: 2px 2px red;">My Website</h2>
               <ul class="navbar-nav ms-auto">
                <li class="nav-item ">
                    <a class="nav-link btn" href = "/signup"><button><h5 style="color:red"><b>LogOut  <i class="fa-regular fa-circle-user"></i></b></h5></button></a> 
                </li>
            </ul>
        
    </nav>

    <h2 class="mt-5"><%=success%></h2>
    <div class="container-fluid mt-5 ">
        <div class="row">
            <div class="col-6 offset-3">
                <form action="/user/login" method="post">
                    <center><i class="fas fa-user"></i>
                    <h5>LogIn</h5></center>

                    <input type="email" class="form-control" placeholder="Enter email" name="email"/><br/>
                   <input type="password" class="form-control" placeholder="Enter password" name="password"/><br/>
                   <center><button type="submit" id="submit">LogIn</center>
                    <h2>Forget password?<a href = "/resetlink">Click</a></h2>
                </form>

            </div>
        </div>
    </div>
    
</body>
