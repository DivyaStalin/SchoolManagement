<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher registration</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/7feae977fb.js" crossorigin="anonymous"></script>
<style>
    .form-control{
        padding: 4%;
        margin: 12%;
        border: none;
        border-bottom: solid black;
        background-color: whitesmoke;
    
    }

    span{
        font-size: 20px;
        color: red;
        margin-left: 50px;
        font-weight: bold;
    }
    .fas{
        color: green;
    }


    
</style>
</head>
<body style="background-color: grey;">
    <center><h1>Teacher registration </h1></center>
    <form action="/teacher/teacherregister" method="post">
        <div class="container">
        <div class="row">
            <div class="col-4">
                <input type="text" class="form-control" id = "empID" placeholder="Enter Emp Id" name="empID"
                onkeyup="validateEmpid()"/>
                <span id = "empIDerr"></span>
            </div>
            <div class="col-4">
                <input type="text" class="form-control" id="firstName" placeholder="Enter Firstname" name="firstName"
                onkeyup="validateFirstname()"/>
                <span id = "firstNameerr"></span>
            </div>
            <div class="col-4">
                <input type="text" class="form-control" id="lastName" placeholder="Enter Lastname" name="lastName" 
                onkeyup="validateLastname()"/>
                <span id = "lastNameerr"></span>
            </div>
            <div class="col-4">
                <input type="email" class="form-control" id="email" placeholder="Enter emailId" name="email" 
                onkeyup="validateEmail()"/>
                <span id = "emailerr"></span>  
            </div>
            <div class="col-4">
                <input type="password" class="form-control" placeholder="Enter your password" id="pword" name="password"
                onkeyup="validatePassword()"/>
                    <span id="passwordErr"></span>
            </div>
            <div class="col-4">
                <input type="password" class="form-control" placeholder="Enter your confirm password" id="cpword" name="confirmPassword"
                onkeyup="validateCPassword()"/>
                    <span id="cpasswordErr"></span></span>
            </div>
            
            <div class="col-4">
                <input type="text" class="form-control" id="mobileNo" placeholder="Enter MobileNo" name="mobileNo"
                onkeyup="validateMobile()"/>
                <span id = "mobileNoerr"></span>
            </div>
            <div class="col-4">
                <input type="text" class="form-control" id="aadharNo" placeholder="Enter AadharNo" name="aadharNo"
                onkeyup="validateAadhar()"/>
                <span id = "aadharNoerr"></span>
            </div>
            <div class="col-4">
                <input type="text" class="form-control" id="qualification" placeholder="Enter Qualification" name="qualification" 
                onkeyup="validateQualification()"/>
                <span id = "qualificationerr"></span>
            </div>
            <div class="col-4" >
                <input type="text" class="form-control" id="subject" placeholder="Enter Subject" name="subject"
                onkeyup="validateSubject()"/>
                <span id = "subjecterr"></span>
            </div>
            <div class="col-4" >
                <input type="text" class="form-control" id="salary" placeholder="Enter Salary" name="salary"
                onkeyup="validateSalary()"/>
                <span id = "salaryerr"></span>
            </div>
            <center>
            <div class="col-4">
          <input type="submit" class="form-control bg-success"id="submit" value="Submit" onclick="validateSubmit()"/>
        </div>
    </center>

        </div>
    </div>
    </form>
</body>
<script>
    var empIDerr = document.getElementById("empIDerr");
    var firstNameerr = document.getElementById("firstNameerr");
    var lastNameerr = document.getElementById("lastNameerr");
    var emailerr = document.getElementById("emailerr");
    var mobileNoerr = document.getElementById("mobileNoerr");
    var aadharNoerr = document.getElementById("aadharNoerr");
    var qualificationerr = document.getElementById("qualificationerr");
    var subjecterr = document.getElementById("subjecterr");
    var salaryerr = document.getElementById("salaryerr");
    var passwordErr = document.getElementById("passwordErr");
    var cpasswordErr = document.getElementById("cpasswordErr");

    function validateEmpid(){
        var empID = document.getElementById("empID").value;
        if(empID.length == 0 ){
            empIDerr.innerHTML = "Enter empID";
            return false;
        }
        empIDerr.innerHTML = '<i class="fas fa-check-circle"></i>';
        return true;
    }
    function validateFirstname(){
        var firstName = document.getElementById("firstName").value;
        if(firstName.length == 0){
            firstNameerr.innerHTML = "Enter First name";
            return false;
        }
        firstNameerr.innerHTML = '<i class="fas fa-check-circle"></i>';
        return true;
    }
    function validateLastname(){
        var lastName = document.getElementById("lastName").value;
        if(lastName.length == 0){
            lastNameerr.innerHTML = "Enter Last name";
            return false;
        }
        lastNameerr.innerHTML = '<i class="fas fa-check-circle"></i>';
        return true;
    }
    function validateEmail(){
        var email= document.getElementById("email").value;
            if(email.length == 0){
                emailerr.innerHTML = "Enter Email";
                return false;
            }
            if(!email.match(/^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+[@]+[a-z]+[.com]+$/)){
                emailerr.innerHTML = "Invalid Email";
                return false;
            }
            emailerr.innerHTML = '<i class="fas fa-check-circle"></i>';
            return true;
    }
    
    function validateMobile(){
        var mobileNo = document.getElementById("mobileNo").value;
            if(mobileNo.length == 0){
                mobileNoerr.innerHTML = "Enter Mobile No.";
                return false;
            }
            if(mobileNo.length !== 10){
                mobileNoerr.innerHTML = "Enter valid 10 digit Mobile No.";
                return false;
            }
            if(!mobileNo.match(/^[0-9{10}]+$/)){
                mobileNoerr.innerHTML = "Invalid MobileNo";
                return false;
            }
            mobileNoerr.innerHTML = '<i class="fas fa-check-circle"></i>';
            return true;

    }
    function validateAadhar(){
        var aadharNo = document.getElementById("aadharNo").value;
            if(aadharNo.length == 0){
                aadharNoerr.innerHTML = "Enter Aadhar No.";
                return false;
            }
            
            if(!aadharNo.match(/^[0-9{10}]+$/)){
                aadharNoerr.innerHTML = "Invalid AadharNo";
                return false
            }
            aadharNoerr.innerHTML = '<i class="fas fa-check-circle"></i>';
            return true;
        }

    function validateQualification(){
        var qualification = document.getElementById("qualification").value;
            if(qualification.length == 0){
                qualificationerr.innerHTML = "Enter qualification.";
                return false;
            }
        qualificationerr.innerHTML = '<i class="fas fa-check-circle"></i>';    
        return true;

    }
    function validateSubject(){
        var subject = document.getElementById("subject").value;
            if(subject.length == 0){
                subjecterr.innerHTML = "Enter Subject.";
                return false;
            }
        subjecterr.innerHTML = '<i class="fas fa-check-circle"></i>';    
        return true;
    }
    function validateSalary(){
        var salary = document.getElementById("salary").value;
            if(salary.length == 0){
                salaryerr.innerHTML = "Enter Salary.";
                return false;
            }
        salaryerr.innerHTML = '<i class="fas fa-check-circle"></i>';    
        return true;

    }
    function validatePassword(){
            var password = document.getElementById("pword").value;
            if(password.length == 0){
                passwordErr.innerHTML = "Enter Password.";
                return false;
            }
            if(password.length !== 6){
                passwordErr.innerHTML = "Enter 6 digits.";
                return false;
            }
            passwordErr.innerHTML = '<i class="fas fa-check-circle"></i>';
           
            return true;
        }
        function validateCPassword(){
            var cpassword = document.getElementById("cpword").value;
            var password = document.getElementById("pword").value;
            if(cpassword.length == 0){
                cpasswordErr.innerHTML = "Enter Password.";
                return false;
            }
            if(cpassword !== password){
                cpasswordErr.innerHTML = "Invalid Confirm Password.";
                return false;
            }
            cpasswordErr.innerHTML = '<i class="fas fa-check-circle"></i>';
            
            return true;
        }
var submit = document.getElementById("submit");
   function validateSubmit(){


    var id = validateEmpid();
    var fn =validateFirstname();
    var ln = validateLastname();
    var mn = validateMobile();
    var eid = validateEmail();
    var qua = validateQualification();
    var sub = validateSubject();
    var sal = validateSalary();
    var ano =validateAadhar();
    var pwd = validatePassword();
    var cpwd = validateCPassword();

   
    if(Boolean(id) && Boolean(fn) && Boolean(ln) && Boolean(mn) && Boolean(eid) && Boolean(qua) && Boolean(sub) && Boolean(sal) && Boolean(ano) && Boolean(pwd) && Boolean(cpwd)){
        return true;
    }else{
        alert("Please Enter all fields");
        return false
    }

   }
</script>
</html>