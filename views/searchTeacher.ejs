<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Teacher details </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<style>
  a{
            color:blue;
            text-decoration: none;
            
        }
</style>
<body>
  <h4 style="text-align: right;"><a href="http://localhost:4000/home">back</a></h4>
    <div class="container mt-5"> 
      <h1>Teacher Details
  </h1>
      <div class="input-group rounded ">
        <form action="/teacher/searchTeacher" method="get">
        <input type="text" name="firstName" class="form-control"id="searchData" placeholder="searchByName" onkeypress="sendData(this)" />
        </div>
        
        </form>
        
      </div>
    
  <br>
  
    <br>
    <div class="container">
    <table class="table table-bordered">
        <thead class="table-dark">
          <tr>
            <th scope="col">Teacher ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            
            <th scope="col">Email</th>
            <th scope="col">MobileNo</th>
            <th scope="col">AadharNo</th>
            <th scope="col">Qualification</th>
            <th scope="col">Subject</th>
            <th scope="col">Salary</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody >
          <%if(result.length > 0) { %>
            <% result.forEach(function(e)  {%>
              <tr>
                <td><%= e.empID %></td>
                <td><%= e.firstName %></td>
                <td><%= e.lastName %></td>
                
                <td><%= e.email %></td>
                <td><%= e.mobileNo %></td>
                <td><%= e.aadharNo %></td>
                <td><%= e.qualification %></td>
                <td><%= e.subject %></td>
                <td><%= e.salary %></td>
                <td>
                  <button  class="btn btn-success">
                  <a href = "/teacher/editTeacher?empID=<%=e.empID%>"><span class="glyphicon glyphicon-pencil"></span></a>
                </button>
              </td>
                <td>
                  <button  class="btn btn-danger">
                    <a href = "/teacher/deleteTeacher/<%=e.firstName%>">
                  <span class="glyphicon glyphicon-trash"></span></a>
                  
                </button>
              </td>

              </tr>
            <% }) %>

          <% } %> 

          
          </tbody>
      </table>
    </div> 
</div> 
</body>
</html>